<!-- debut de la navbar -->

<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
  <a class="navbar-brand" href="{{ path('index') }}">
    <i class="fas fa-home"></i> {{'Démo SF'|trans}}
  </a>
  <button class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarsExampleDefault"
    aria-controls="navbarsExampleDefault"
    aria-expanded="false"
    aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarsExampleDefault">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('boutique') }}">
          <i class="fas fa-store"></i> {{ 'shop'|trans }}
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('panier') }}">
          <i class="fas fa-shopping-cart"></i> {{ nbrProduits }} {{ 'products'|trans }}
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('contact') }}">
          <i class="fas fa-comments"></i> {{ 'contact'|trans }}
        </a>
      </li>
      <li class="nav-item dropdown">
        <span class="nav-link dropdown-toggle"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false">
          <i class="fas {{app.user ? 'fa-user-check' : 'fa-user'}}"></i> {{app.user ? app.user.prenom : 'connexion'|trans}}
        </span>
        <div class="dropdown-menu" aria-labelledby="dropdown01">
          <a class="dropdown-item {{app.user ? 'disabled' : ''}}"
            href="{{ path('compteConnexion') }}">
            {{ 'connexion'|trans }}/Inscription
          </a>
          <a class="dropdown-item {{app.user ? '' : 'disabled'}}"
            href="{{ path('compteDetail') }}">
            {{ 'connexion.myAccount'|trans }}
          </a>
          <a class="dropdown-item {{app.user ? '' : 'disabled'}}"
            href="{{ path('compteCommandes') }}">
            {{ 'connexion.myOrders'|trans }}
          </a>
          <a class="dropdown-item {{app.user ? '' : 'disabled'}}"
            href="{{ path('compteDeconnexion') }}">
            {{ 'logOut'|trans }}
          </a>
        </div>
      </li>
      <li class="nav-item"
        data-toggle="tooltip"
        title=""
        data-placement="right"
        data-html="true"
        data-original-title="Ne devra être visible que pour l'Admin">
        <span class="nav-link disabled" href="">
          <i class="fas fa-tools"></i> {{ 'backOffice'|trans }}
        </span>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2"
        id="searchString"
        type="text"
        placeholder="{{ 'nav.searchPlaceHolder'|trans }}"
        aria-label="Search" />
      <button class="btn btn-secondary my-2 my-sm-0" id="searchButton">
        <i class="fas fa-search"></i>
      </button>
    </form>
    <ul class="navbar-nav my-0">
      <li class="nav-item dropdown">
        <span class="nav-link dropdown-toggle"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false">
          {{getDevise()}}
        </span>
        <div class="dropdown-menu"
          aria-labelledby="dropdown02"
          style="min-width: 5rem;">
          <a class="dropdown-item"
            href="{{ path('changeDevise', {'devise':'CAD'}) }}">
            CAD
          </a>
          <a class="dropdown-item"
            href="{{ path('changeDevise', {'devise':'USD'}) }}">
            USD
          </a>
          <a class="dropdown-item"
            href="{{ path('changeDevise', {'devise':'GBP'}) }}">
            GBP
          </a>
          <a class="dropdown-item"
            href="{{ path('changeDevise', {'devise':'PHP'}) }}">
            PHP
          </a>
          <a class="dropdown-item"
            href="{{ path('changeDevise', {'devise':'IDR'}) }}">
            IDR
          </a>
        </div>
      </li>
    </ul>
    <ul class="navbar-nav my-0">
      <li class="nav-item dropdown">
        <span class="nav-link dropdown-toggle"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false">
          <img src="{{ asset('images/locale/'~ app.request.locale ~'.png') }}" alt="{{app.request.locale}}" />
        </span>
        <div class="dropdown-menu"
          aria-labelledby="dropdown03"
          style="min-width: 5rem;">
          {% for locale in supported_locales|split('|') %}
            {% if locale != app.request.locale %}
            <a class="dropdown-item" href="{{ path('index', {'_locale': locale}) }}">
              <img src="{{ asset('images/locale/'~ locale ~'.png') }}" alt="{{locale}}" />
            </a>
            {% endif %}
          {% endfor %}
        </div>
      </li>
    </ul>
  </div>
</nav>
<!-- fin de la navbar -->
