{% extends 'base.html.twig' %}

{% block body %}
  <div class="row small">
    <div class="card col-md-4 offset-1">
      <div class="card-header">
        <h3>
          <i class="fas fa-user-check"></i> Déjà Membre : Connexion
        </h3>
      </div>
      <div class="card-body">
      {% if error is defined and error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}
        <form method="post" action="{{ path('app_login') }}">
          <div class="form-group">
            <label for="inputEmail">Email</label>
            <input type="email"
              value="{{ last_username ??"" }}"
              name="email"
              id="inputEmail"
              class="form-control"
              required
              autofocus />
          </div>
          <div class="form-group">
            <label for="inputPassword">Mot de Passe</label>
            <input type="password"
              name="password"
              id="inputPassword"
              class="form-control"
              required />
            <input type="hidden"
              name="_csrf_token"
              value="{{ csrf_token('authenticate') }}" />
          </div>
          <div class="col-md-12 btn-group" style="padding:0px">
            <button class="btn btn-primary" type="submit">Connexion</button>
          </div>
        </form>
      </div>
    </div>
    <div class="col-md-1"></div>
    <div class="card col-md-5">
      <div class="card-header">
        <h3>
          <i class="fas fa-user-plus"></i> Nouveau Membre : Inscription
        </h3>
      </div>
      <div class="card-body">
        {{ form_start(form)}}
        <div>
          {{ form_errors(form) }}
          {{ form_errors(form.email) }}
          {{ form_errors(form.password) }}
          {{ form_errors(form.prenom) }}
          {{ form_errors(form.nom) }}
        </div> 
          <div id="usager">
            <div class="form-group">
              {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            {{ form_row(form._token) }}
            <div class="col-md-12 btn-group" style="padding:0px">
              <button class="btn btn-primary" type="submit">Inscription</button>
            </div>
          </div>
        {{ form_end(form, {render_rest: false}) }}
