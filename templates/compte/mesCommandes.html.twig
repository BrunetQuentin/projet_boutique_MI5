{% extends 'base.html.twig' %}

{% block body %}
  <div class="col-8 offset-2">
    <div class="card">
      <div class="card-header">
        <h3>
          <i class="fas fa-user-check"></i> Mes Commandes
        </h3>
      </div>
      <div class="card-body">
        <table class="table table-striped table-sm table-hover">
          <thead>
            <tr>
              <th>
                N°
              </th>
              <th>
                Date
              </th>
              <th>
                Produits
              </th>
              <th>
                Montant
              </th>
              <th>
                Statut
              </th>
            </tr>
          </thead>
          <tbody>
            {% for commande in app.user.commandes %}
              <tr>
                <td>
                  {{ commande.id }}
                </td>
                <td>
                  {{ commande.getDateCommande|date('d/m/Y') }} à {{ commande.getDateCommande|date('H:i:s') }}
                </td>
                <td>
                  {{ commande.ligneCommandes|length }}
                </td>
                <td>
                  {{
                    commande.ligneCommandes|reduce((total, ligneCommande) => total + (ligneCommande.prix * ligneCommande.quantite), 0)
                  }}&nbsp;€
                </td>
                <td>
                  {% if commande.getStatus == 'En cours' %}
                    <i class="fas fa-hourglass-half"
                      data-toggle="tooltip"
                      title=""
                      data-placement="right"
                      data-original-title="validation en Attente">
                    </i>
                  {% elseif commande.getStatus == 'Validé' %}
                    <i class="fas fa-check"
                      data-toggle="tooltip"
                      title=""
                      data-placement="right"
                      data-original-title="Commande validée">
                    </i>
                  {% elseif commande.getStatus == 'Annulé' %}
                    <i class="fas fa-times-circle"
                      data-toggle="tooltip" 
                      title=""
                      data-placement="right"
                      data-original-title="Commande annulée">
                    </i>
                  {% endif %}
                  {% if commande.getStatus == 'Livré' %}
                    <i class="fas fa-check"
                      data-toggle="tooltip"
                      title=""
                      data-placement="right"
                      data-original-title="Livré">
                    </i>
                  {% endif %}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
