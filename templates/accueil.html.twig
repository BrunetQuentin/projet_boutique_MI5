{% extends 'base.html.twig' %}

{% block body %}
  <div class="card col-md-12">
    <div class="card-header">
      <h1>
        <i class="fas fa-home"></i> Démo Symfony
      </h1>
    </div>
    <div class="card-body">
      <div class="card clickable"
        onclick="location = '{{ relative_path('/boutique/') }}'">
        <img src="{{ asset('images/epicerie.jpg') }}"
          class="card-img-top"
          alt="Logo Boutique Symfony" />
        <div class="card-body">
          <p class="card-text">
            <i>Ici rien à vendre, c'est juste pour apprendre</i>
          </p>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
