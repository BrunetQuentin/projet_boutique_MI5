{% extends 'base.html.twig' %}
{% block body %}
  <div class="card col-md-12">
    <div class="card-header">
      <h1>
        <i class="fas fa-shopping-cart"></i> 3 Produit(s) :
        <b>7,84&nbsp;€</b>
      </h1>
      <div class="col-md-12 btn-group btn-group-lg" role="group">
        <a class="btn btn-primary" href="/mi5/fr/boutique">
          Continuer les Courses
        </a>
        <a class="btn btn-primary" href="/mi5/fr/panier/commander">
          Passer la Commande
        </a>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <table class="table table-striped table-sm table-hover">
          <thead>
            <tr>
              <th></th>
              <th>
                Produit
              </th>
              <th class="text-right">
                Prix
              </th>
              <th>
                Quantite
              </th>
              <th class="text-right">
                Total
              </th>
              <th>
                Supprimer
              </th>
            </tr>
          </thead>
          <tbody>
            {% for produit in panier %}
              <tr>
                <td>
                  <img src="{{ asset(produit.produit.image) }}"
                    class="cart-img-produit"
                    alt="{{ produit.produit.libelle }}" />
                </td>
                <td>
                  <a href="/mi5/fr/boutique/rayon/3">
                    <b>{{ produit.produit.libelle }}</b>
                  </a>
                </td>
                <td class="text-right">
                  2,50&nbsp;€
                </td>
                <td>
                  <a href="/mi5/fr/panier/enlever/9">
                    <i class="fas fa-minus-square text-muted"></i>
                  </a>
                  {{ produit.quantite }}
                  <a href="/mi5/fr/panier/ajouter/9">
                    <i class="fas fa-plus-square text-muted"></i>
                  </a>
                </td>
                <td class="text-right">
                  5,00&nbsp;€
                </td>
                <td>
                  <a href="/mi5/fr/panier/supprimer/9">
                    <i class="fas fa-trash text-muted"
                      data-toggle="tooltip"
                      title=""
                      data-placement="right"
                      data-html="true"
                      data-original-title="Supprimer Oreo">

                    </i>
                  </a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
          <thead>
            <tr>
              <th class="text-right" colspan="4">
                Total
              </th>
              <th class="text-right">
                7,84&nbsp;€
              </th>
              <th>
                <a href="/mi5/fr/panier/vider">
                  <i class="fas fa-trash text-muted"
                    data-toggle="tooltip"
                    title=""
                    data-placement="right"
                    data-html="true"
                    data-original-title="Vider le Panier">

                  </i>
                </a>
              </th>
            </tr>
          </thead>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
